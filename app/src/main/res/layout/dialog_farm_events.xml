<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height"
            android:text="@string/label_add_animal"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height"
            android:text="@string/label_seen"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height"
            android:text="@string/label_dipping_spraying"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height"
            android:text="@string/label_vaccination"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height"
            android:text="@string/label_deworming"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height"
            android:text="@string/label_disposal_request"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height"
            android:text="@string/label_weighing"/>
    </LinearLayout>
</ScrollView>